<Window x:Class="PS3EmulatorSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PS_Multi_Tools"
        mc:Ignorable="d"
        Title="RPCS3 Settings" Height="120" Width="300" ResizeMode="CanMinimize" Background="#2D2D30" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0"  Text="No settings available yet." VerticalAlignment="Top" Foreground="White"/>
        <Button x:Name="StartEmulatorButton" Content="Configure rpcs3 using rpcs3.exe" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" Width="200" FontWeight="Bold"/>

    </Grid>
</Window>
