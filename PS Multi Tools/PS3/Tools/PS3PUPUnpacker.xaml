<Window x:Class="PS3PUPUnpacker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PS_Multi_Tools"
             mc:Ignorable="d" 
             Title="PS3 PUP Unpacker" Height="205" Width="420" ThemeMode="System" ResizeMode="CanMinimize">
    <Grid>
        <Button x:Name="BrowsePUPButton" Content="Browse" HorizontalAlignment="Left" Margin="315,32,0,0" VerticalAlignment="Top" Width="74"/>
        <TextBox x:Name="SelectedPUPTextBox" HorizontalAlignment="Left" Margin="10,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Selected a PS3UPDAT.PUP file :" VerticalAlignment="Top"  FontSize="14"/>
        <Button x:Name="BrowseOutputButton" Content="Browse" HorizontalAlignment="Left" Margin="315,94,0,0" VerticalAlignment="Top" Width="74"/>
        <TextBox x:Name="SelectedOutputFolderTextBox" HorizontalAlignment="Left" Margin="10,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,71,0,0" TextWrapping="Wrap" Text="Selected an output folder :" VerticalAlignment="Top"  FontSize="14"/>
        <Button x:Name="UnpackButton" Content="Unpack" HorizontalAlignment="Left" Margin="236,129,0,0" VerticalAlignment="Top" Width="74"/>

    </Grid>
</Window>
