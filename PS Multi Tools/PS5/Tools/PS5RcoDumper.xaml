<Window x:Class="PS5RcoDumper"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PS_Multi_Tools"
             mc:Ignorable="d" 
             Title="RCO Dumper" Height="180" Width="325" Background="#2D2D30" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="LoadFilesButton" Content="Get files" HorizontalAlignment="Center" Margin="0,106,0,0" VerticalAlignment="Top" Width="254"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="This will dump .rco files using FTP." VerticalAlignment="Top" Foreground="White" FontSize="14" Width="305" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,34,0,0" TextWrapping="Wrap" Text="Dump to:" VerticalAlignment="Top" Foreground="White" FontSize="14" Width="305" TextAlignment="Center"/>
        <TextBox x:Name="SaveToTextBox" HorizontalAlignment="Center" Margin="0,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="255"/>
        <Button x:Name="BrowseButton" Content="Browse" HorizontalAlignment="Center" Margin="0,81,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
