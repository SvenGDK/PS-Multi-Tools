<Window x:Class="PS5Sender"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PS_Multi_Tools"
        mc:Ignorable="d"
        Title="PS4/PS5 Payload and Mast1c0re Sender" Height="410" Width="505" Background="#2D2D30" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="IPTextBox" HorizontalAlignment="Left" Margin="10,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,39,0,0" TextWrapping="Wrap" Text="Enter your PS4 / PS5 IP:" VerticalAlignment="Top" FontSize="14" Foreground="White"/>
        <TextBox x:Name="SelectedELFTextBox" HorizontalAlignment="Left" Margin="10,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Height="20"/>
        <Button x:Name="SendButton" Content="Send" HorizontalAlignment="Left" Margin="330,183,0,0" VerticalAlignment="Top" Width="80"/>
        <Button x:Name="BrowseButton" Content="Browse" HorizontalAlignment="Left" Margin="415,158,0,0" VerticalAlignment="Top" Width="66"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,134,0,0" TextWrapping="Wrap" Text="Selected ELF or BIN:" VerticalAlignment="Top" FontSize="14" Width="400" Foreground="White"/>
        <TextBox x:Name="SelectedISOTextBox" HorizontalAlignment="Left" Margin="10,264,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Height="20"/>
        <Button x:Name="SendISOButton" Content="Send ISO" HorizontalAlignment="Left" Margin="245,289,0,0" VerticalAlignment="Top" Width="80"/>
        <Button x:Name="BrowseISOButton" Content="Browse" HorizontalAlignment="Left" Margin="415,264,0,0" VerticalAlignment="Top" Width="66"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,240,0,0" TextWrapping="Wrap" Text="Selected ISO:" VerticalAlignment="Top" FontSize="14" Foreground="White"/>
        <Button x:Name="SendConfigButton" Content="Send Config" HorizontalAlignment="Left" Margin="330,289,0,0" VerticalAlignment="Top" Width="80" IsEnabled="False"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,105,0,0" TextWrapping="Wrap" Text="Send a Payload" VerticalAlignment="Top" FontSize="18" Foreground="White" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,211,0,0" TextWrapping="Wrap" Text="Send a PS2 Game" VerticalAlignment="Top" FontSize="18" Foreground="White" FontWeight="Bold"/>
        <ProgressBar x:Name="SendProgressBar" HorizontalAlignment="Left" Height="20" Margin="10,339,0,0" VerticalAlignment="Top" Width="471" Foreground="#FF00A4E3"/>
        <TextBlock x:Name="SendStatusTextBlock" HorizontalAlignment="Left" Margin="10,314,0,0" TextWrapping="Wrap" Text="Send Status:" VerticalAlignment="Top" Width="471" Height="20" Foreground="White"/>
        <TextBox x:Name="PortTextBox" HorizontalAlignment="Left" Margin="265,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145" Height="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="265,39,0,0" TextWrapping="Wrap" Text="Port:" VerticalAlignment="Top" FontSize="14" Foreground="White"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Sender Configuration" VerticalAlignment="Top" FontSize="18" Foreground="White" FontWeight="Bold"/>
    </Grid>
</Window>
