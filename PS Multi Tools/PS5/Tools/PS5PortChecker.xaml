<Window x:Class="PS5PortChecker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PS_Multi_Tools"
        mc:Ignorable="d"
        Title="PS5 Port Checker" Height="400" Width="400" ThemeMode="System" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <TextBox x:Name="IPAddressTextBox" HorizontalAlignment="Left" Margin="10,58,0,0"  VerticalAlignment="Top" Width="150"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,34,0,0"  Text="PS5 IP :" VerticalAlignment="Top"  FontSize="14"/>
        <TextBox x:Name="PortTextBox" HorizontalAlignment="Left" Margin="173,58,0,0"  VerticalAlignment="Top" Width="100"/>
        <TextBlock HorizontalAlignment="Left" Margin="173,34,0,0"  Text="Port to check :" VerticalAlignment="Top"  FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Text="Detected open Ports on the PS5" VerticalAlignment="Top" FontSize="14" Margin="10,96,0,0" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Text="Check a Port manually" VerticalAlignment="Top" FontSize="14" Margin="10,10,0,0" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,120,0,0"  Text="ELF Loader Ports :" VerticalAlignment="Top"  FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,144,0,0"  Text="FTP Server Ports :" VerticalAlignment="Top"  FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,168,0,0"  Text="Kernel Log Ports :" VerticalAlignment="Top"  FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,192,0,0"  Text="Discord RPC Port :" VerticalAlignment="Top"  FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,216,0,0"  Text="Direct PKG installer V2 service Port :" VerticalAlignment="Top"  FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,240,0,0"  Text="Direct PKG installer service Port :" VerticalAlignment="Top"  FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,264,0,0"  Text="SH Server Port :" VerticalAlignment="Top"  FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,288,0,0"  Text="Web Server Port :" VerticalAlignment="Top"  FontSize="14"/>
        <Button x:Name="CheckPortButton" Content="Check" HorizontalAlignment="Left" Margin="290,57,0,0" VerticalAlignment="Top" Width="75" FontWeight="Bold"/>
        <TextBlock x:Name="Port9020TextBlock" HorizontalAlignment="Left" Margin="240,120,0,0"  Text="9020" VerticalAlignment="Top"  FontSize="14"/>
        <TextBlock x:Name="Port1337TextBlock" HorizontalAlignment="Left" Margin="240,144,0,0"  Text="1337" VerticalAlignment="Top"  FontSize="14"/>
        <TextBlock x:Name="Port3232TextBlock" HorizontalAlignment="Left" Margin="240,168,0,0"  Text="3232" VerticalAlignment="Top"  FontSize="14"/>
        <TextBlock x:Name="Port8000TextBlock" HorizontalAlignment="Left" Margin="240,192,0,0"  Text="8000" VerticalAlignment="Top"  FontSize="14"/>
        <TextBlock x:Name="Port12800TextBlock" HorizontalAlignment="Left" Margin="240,216,0,0"  Text="12800" VerticalAlignment="Top"  FontSize="14"/>
        <TextBlock x:Name="Port9090TextBlock" HorizontalAlignment="Left" Margin="240,240,0,0"  Text="9090" VerticalAlignment="Top"  FontSize="14"/>
        <TextBlock x:Name="Port2323TextBlock" HorizontalAlignment="Left" Margin="240,264,0,0"  Text="2323" VerticalAlignment="Top"  FontSize="14"/>
        <TextBlock x:Name="Port8080TextBlock" HorizontalAlignment="Left" Margin="240,288,0,0"  Text="8080" VerticalAlignment="Top"  FontSize="14"/>
        <TextBlock x:Name="Port9021TextBlock" HorizontalAlignment="Left" Margin="290,120,0,0"  Text="9021" VerticalAlignment="Top"  FontSize="14"/>
        <TextBlock x:Name="Port2121TextBlock" HorizontalAlignment="Left" Margin="290,144,0,0"  Text="2121" VerticalAlignment="Top"  FontSize="14"/>
        <TextBlock x:Name="Port9081TextBlock" HorizontalAlignment="Left" Margin="290,168,0,0"  Text="9081" VerticalAlignment="Top"  FontSize="14"/>
        <Button x:Name="ReloadButton" Content="Reload" HorizontalAlignment="Center" Margin="0,321,0,0" VerticalAlignment="Top" Width="76" FontWeight="Bold"/>

    </Grid>
</Window>
