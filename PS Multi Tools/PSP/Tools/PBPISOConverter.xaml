<Window x:Class="PBPISOConverter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PS_Multi_Tools"
             mc:Ignorable="d" 
             Title="PBP ~ ISO Converter" Height="340" Width="810" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" ThemeMode="System">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,36,0,0"  Text="Select a .PBP file :" VerticalAlignment="Top"  FontSize="14"/>
        <TextBox x:Name="SelectedPBPTextBox" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="275" IsReadOnly="True"/>
        <Button x:Name="BrowsePBPButton" Content="Browse" HorizontalAlignment="Left" Margin="290,59,0,0" VerticalAlignment="Top" Width="70"/>
        <Button x:Name="ConvertToPBPButton" Content="Convert to .PBP" HorizontalAlignment="Left" Margin="624,225,0,0" VerticalAlignment="Top" Width="125" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="399,36,0,0"  Text="Select an .iso file :" VerticalAlignment="Top"  FontSize="14"/>
        <TextBox x:Name="SelectedISOTextBox" HorizontalAlignment="Left" Margin="399,60,0,0" VerticalAlignment="Top" Width="275" IsReadOnly="True"/>
        <Button x:Name="BrowseISOButton" Content="Browse" HorizontalAlignment="Left" Margin="679,59,0,0" VerticalAlignment="Top" Width="70"/>
        <Button x:Name="ConvertToISOButton" Content="Convert to .iso" HorizontalAlignment="Left" Margin="235,161,0,0" VerticalAlignment="Top" Width="125" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="399,10,0,0"  Text="Convert to PBP" VerticalAlignment="Top"  FontSize="16" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0"  Text="Convert to ISO" VerticalAlignment="Top"  FontSize="16" FontWeight="Bold"/>
        <TextBlock x:Name="ConvertISOStatusTextBlock" HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top"  FontSize="12" Width="350" Height="35"/>
        <TextBlock x:Name="ConvertPBPStatusTextBlock" HorizontalAlignment="Left" Margin="399,263,0,0" VerticalAlignment="Top"  FontSize="12" Width="350" Height="35"/>
        <TextBlock HorizontalAlignment="Left" Margin="399,97,0,0"  Text="Select a STARTDAT image :" VerticalAlignment="Top"  FontSize="14"/>
        <TextBox x:Name="SelectedIMGTextBox" HorizontalAlignment="Left" Margin="399,121,0,0" VerticalAlignment="Top" Width="275" IsReadOnly="True"/>
        <Button x:Name="BrowseIMGButton" Content="Browse" HorizontalAlignment="Left" Margin="679,120,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,97,0,0"  Text="Select an output folder :" VerticalAlignment="Top"  FontSize="14"/>
        <TextBox x:Name="SelectedPBPOutputFolderTextBox" HorizontalAlignment="Left" Margin="399,186,0,0" VerticalAlignment="Top" Width="275" IsReadOnly="True"/>
        <Button x:Name="BrowsePBPOutputButton" Content="Browse" HorizontalAlignment="Left" Margin="679,185,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBlock HorizontalAlignment="Left" Margin="399,162,0,0"  Text="Select an output folder :" VerticalAlignment="Top"  FontSize="14"/>
        <TextBox x:Name="SelectedISOOutputFolderTextBox" HorizontalAlignment="Left" Margin="10,121,0,0" VerticalAlignment="Top" Width="275" IsReadOnly="True"/>
        <Button x:Name="BrowseISOOutputButton" Content="Browse" HorizontalAlignment="Left" Margin="290,120,0,0" VerticalAlignment="Top" Width="70"/>

    </Grid>
</Window>
