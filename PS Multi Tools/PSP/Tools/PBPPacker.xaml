<Window x:Class="PBPPacker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PS_Multi_Tools"
             mc:Ignorable="d" 
             Title="PBP Packer / Unpacker" Height="480" Width="760" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" ThemeMode="System">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,130,0,0"  Text="Pack to PBP" VerticalAlignment="Top"  FontSize="16" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0"  Text="Unpack PBP" VerticalAlignment="Top"  FontSize="16" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,36,0,0"  Text="Select a .PBP file :" VerticalAlignment="Top"  FontSize="14"/>
        <TextBox x:Name="SelectedPBPTextBox" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="614" IsReadOnly="True"/>
        <Button x:Name="BrowsePBPButton" Content="Browse" HorizontalAlignment="Left" Margin="629,59,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="UnpackPBPButton" Content="Unpack" HorizontalAlignment="Left" Margin="629,94,0,0" VerticalAlignment="Top" Width="100" FontWeight="Bold"/>
        <Button x:Name="BrowsePARAMButton" Content="Browse" HorizontalAlignment="Left" Margin="291,179,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="SelectedPARAMTextBox" HorizontalAlignment="Left" Margin="10,180,0,0" VerticalAlignment="Top" Width="275" IsReadOnly="True"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,156,0,0"  Text="PARAM.SFO :" VerticalAlignment="Top"  FontSize="14"/>
        <Button x:Name="BrowseICON0Button" Content="Browse" HorizontalAlignment="Left" Margin="291,240,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="SelectedICON0TextBox" HorizontalAlignment="Left" Margin="10,241,0,0" VerticalAlignment="Top" Width="275" IsReadOnly="True"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,217,0,0"  Text="ICON0.PNG :" VerticalAlignment="Top"  FontSize="14"/>
        <Button x:Name="BrowseICON1PMFButton" Content="Browse" HorizontalAlignment="Left" Margin="291,298,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="SelectedICON1TextBox" HorizontalAlignment="Left" Margin="10,299,0,0" VerticalAlignment="Top" Width="275" IsReadOnly="True"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,275,0,0"  Text="ICON1.PMF :" VerticalAlignment="Top"  FontSize="14"/>
        <Button x:Name="BrowsePIC0Button" Content="Browse" HorizontalAlignment="Left" Margin="291,356,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="SelectedPIC0TextBox" HorizontalAlignment="Left" Margin="10,357,0,0" VerticalAlignment="Top" Width="275" IsReadOnly="True"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,333,0,0"  Text="PIC0.PNG :" VerticalAlignment="Top"  FontSize="14"/>
        <Button x:Name="BrowseSND0Button" Content="Browse" HorizontalAlignment="Left" Margin="660,179,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="SelectedSND0TextBox" HorizontalAlignment="Left" Margin="379,180,0,0" VerticalAlignment="Top" Width="275" IsReadOnly="True"/>
        <TextBlock HorizontalAlignment="Left" Margin="379,156,0,0"  Text="SND0.AT3 :" VerticalAlignment="Top"  FontSize="14"/>
        <Button x:Name="BrowseDataPSPButton" Content="Browse" HorizontalAlignment="Left" Margin="660,240,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="SelectedDataPSPTextBox" HorizontalAlignment="Left" Margin="379,241,0,0" VerticalAlignment="Top" Width="275" IsReadOnly="True"/>
        <TextBlock HorizontalAlignment="Left" Margin="379,217,0,0"  Text="DATA.PSP :" VerticalAlignment="Top"  FontSize="14"/>
        <Button x:Name="BrowseDATAPSARButton" Content="Browse" HorizontalAlignment="Left" Margin="660,298,0,0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="SelectedDataPSARTextBox" HorizontalAlignment="Left" Margin="379,299,0,0" VerticalAlignment="Top" Width="275" IsReadOnly="True"/>
        <TextBlock HorizontalAlignment="Left" Margin="379,275,0,0"  Text="DATA.PSAR :" VerticalAlignment="Top"  FontSize="14"/>
        <Button x:Name="PackPBPButton" Content="Pack PBP" HorizontalAlignment="Left" Margin="629,395,0,0" VerticalAlignment="Top" Width="100" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="379,333,0,0"  Text="File Name :" VerticalAlignment="Top"  FontSize="14"/>
        <TextBox x:Name="NewFileNameTextBox" HorizontalAlignment="Left" Margin="379,357,0,0" VerticalAlignment="Top" Width="350"/>

    </Grid>
</Window>
