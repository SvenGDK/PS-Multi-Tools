<Window x:Class="PSXSyncWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PS_Multi_Tools"
        mc:Ignorable="d"
        Title="Loading" Height="115" Width="450" ResizeMode="CanMinimize" Background="#FF252525" WindowStartupLocation="CenterScreen">
    <Grid>
        <ProgressBar x:Name="LoadProgressBar" Height="25" Margin="10,0,10,10" VerticalAlignment="Bottom" Foreground="#FF0069FF"/>
        <TextBlock x:Name="LoadStatusTextBlock" Margin="10,10,10,0" TextWrapping="Wrap" Text="Loading files x / x" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
    </Grid>
</Window>
